{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CheckIn</th>
                <td>{{ reservation.checkIn ? reservation.checkIn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CheckOut</th>
                <td>{{ reservation.checkOut ? reservation.checkOut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NumberOfPeople</th>
                <td>{{ reservation.numberOfPeople }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ reservation.cost }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_admin_index') }}">back to list</a>

    <a href="{{ path('app_reservation_admin_edit', {'id': reservation.id}) }}">edit</a>

